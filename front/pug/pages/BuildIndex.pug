.wrapper
    section.auto
        .auto__container
            .auto__logo
                img(src='img/logo.svg' alt="logo")
            .auto__image
                picture
                    source(media="(max-width: 600px) and (orientation: portrait)" srcset="img/car-head-mob.png")
                    source(media="(max-width: 920px) and (orientation: landscape) and (max-height: 450px)" srcset="img/car-head-mob.png")
                    source(media="(min-width: 601px) and (max-width: 1112px) and (orientation: portrait)" srcset="img/car-head-desc.png")
                    source(media="(min-width: 601px) and (orientation: landscape)" srcset="img/car-head-desc.png")
                    img(src="img/car-head-desc.png" alt="Favbet")
            .auto__info
                .auto__text Іде збір
                .auto__progress
                    .myProgress
                        .percetn 44%
                .auto__button
                    a(href='#' class='auto__link')
            .auto__left
                .auto__left-done
                .auto__left-load
                    img(src='img/min-key.svg' alt='key')
